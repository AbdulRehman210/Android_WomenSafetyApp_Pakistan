<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


    <ImageButton
        android:id="@+id/fake_call"
        android:background="@drawable/buttontype"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/telephone_call"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="63dp" />
    <TextView
        android:id="@+id/fake_call_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/orange"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="FAKE CALL"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />





        <ImageButton
            android:id="@+id/share_location"
            android:background="@drawable/buttontype"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/location"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/share_location_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/orange"
            android:text="SHARE LOCATION"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />




        <ImageButton
            android:id="@+id/help_call"
            android:background="@drawable/buttontype"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/helpline"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/help_call_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/orange"
            android:text="HELP CALLS"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />





        <ImageButton
            android:id="@+id/help_places"
            android:background="@drawable/buttontype"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/google_maps"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/help_places_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/orange"
            android:text="GOOGLE MAPS"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />


























    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>